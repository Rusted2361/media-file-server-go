pipeline {
    agent any

    environment {
        EC2_HOST = "your.ec2.ip.address"
        SSH_CRED = "ec2-ssh"   // ID from step 3
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'git@github.com:Rusted2361/media-file-server-go.git'
            }
        }

        stage('Build Go App') {
            steps {
                sh 'go version'
                sh 'go build -o mediaservice ./cmd/main/main.go'
            }
        }

        stage('Deploy to EC2') {
            steps {
                sshagent (credentials: [env.SSH_CRED]) {
                    sh """
                        scp -o StrictHostKeyChecking=no mediaservice ubuntu@${EC2_HOST}:/usr/local/bin/main
                        ssh ubuntu@${EC2_HOST} 'sudo systemctl daemon-reload && sudo systemctl restart mediaservice'
                    """
                }
            }
        }
    }
}
