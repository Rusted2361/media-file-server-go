pipeline {
    agent {
        docker {
            image 'golang:1.19'
        }
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Rusted2361/media-file-server-go.git',
                    credentialsId: 'github-creds'
            }
        }

        stage('Build') {
            steps {
                sh 'go build -o mediaservice main.go'
            }
        }

        stage('Deploy') {
            steps {
                sshagent(credentials: ['ec2-ssh-key']) {
                    sh '''
                    scp -o StrictHostKeyChecking=no mediaservice ubuntu@65.1.146.244:/usr/local/bin/mediaservice
                    ssh -o StrictHostKeyChecking=no ubuntu@65.1.146.244 "sudo systemctl daemon-reload && sudo systemctl restart mediaservice"
                    '''
                }
            }
        }
    }
}
